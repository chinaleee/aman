  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 20rpx solid #fff;
  line-height: 80rpx;
  text-align: center;
}

.ask {
  margin: 70rpx auto;
  font-size: 60rpx;
  color: #fff;
  text-align: center;
}

.answer-box {
  margin: 0 auto;
}

.answer-box>view {
