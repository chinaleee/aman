page {
  background: #4d83e3;
  width: 100%;
  height: 100%;
  position: relative;
}

.top {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
}

.top-l {
  width: 320rpx;
  height: 120rpx;
  position: relative;
}

.top-l>image {
  position: absolute;
  z-index: 1;
  width: 320rpx;
  height: 120rpx;
}

.topl-head {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  z-index: 2;
  top: 9rpx;
  left: 9rpx;
  border: 5rpx solid #fff;
}

.topl-name {
  position: absolute;
  z-index: 2;
  top: 15rpx;
  left: 150rpx;
  color: #fff;
}

.topl-score {
  position: absolute;
  z-index: 2;
  top: 55rpx;
  left: 150rpx;
  color: #fff;
  font-size: 50rpx;
}

