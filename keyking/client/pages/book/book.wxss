/* pages/book/book.wxss */
page{
  background: #4d83e3;
}
.main{
  width: 90%;
  height: 900rpx;
  position: relative;
  margin-top:50rpx; 
}
.main-1{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
}
.main-2{
  position: absolute;
  z-index: 2;
  width: 500rpx;
  height: 200rpx;
  left: 50%;
  margin-left:-250rpx;
  top: -50rpx; 
}
.book-box{
  position: absolute;
  z-index: 5;
  width: 100%;
  top: 150rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.book{
  text-align: center;
  margin-bottom: 50rpx;
  position: relative;
}
.book>image{
  width: 130rpx;
  height: 130rpx;

}
.book-name{
  width: 180rpx;
  height: 100rpx;
  margin: 0 auto;
  color: #fff;
  margin-top:30rpx; 
}
.price{
  width: 100rpx;
  height: 40rpx;
  border-radius: 30rpx;
  background: #C7FFFF;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  bottom: 105rpx;
  left: 50%;
  margin-left: -50rpx;
}
.askme{
  width: 400rpx;
  height: 100rpx;
  background: #fff;
  color: #4d83e3;
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  margin-left: -200rpx;
  border-radius: 40rpx;
  z-index: 7;
  text-align: center;
  line-height: 100rpx;
}
.free{
  width: 400rpx;
  height: 100rpx;
  background: green;
  color: #fff;
   position: absolute; 
  bottom: 80rpx;
  left: 50%;
  margin-left: -200rpx;
  border-radius: 40rpx;
  z-index: 7;
  text-align: center;
  line-height: 100rpx;
}